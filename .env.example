# ===========================================
# HDTICKETDESK - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/hdticketdesk?schema=public"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars-long"
JWT_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ===========================================
# PAYSTACK (Payment Gateway)
# ===========================================
# Get from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_WEBHOOK_SECRET="your-webhook-secret"

# ===========================================
# EMAIL (SendGrid or SMTP)
# ===========================================
# Option 1: SendGrid
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@hdticketdesk.com"
EMAIL_FROM_NAME="hdticketdesk"

# Option 2: SMTP (Gmail, Mailgun, etc.)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ===========================================
# CLOUDINARY (Image Uploads)
# ===========================================
# Get from: https://console.cloudinary.com/settings/c-xxxxxxx/api-keys
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="123456789012345"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV="development"
PORT="3001"
API_PREFIX="api/v1"
FRONTEND_URL="http://localhost:3000"

# Platform settings
PLATFORM_FEE_PERCENT="5"
WITHDRAWAL_WAIT_HOURS="24"
REFUND_WINDOW_HOURS="24"
OTP_EXPIRY_MINUTES="10"

# Security
MAX_LOGIN_ATTEMPTS="5"
LOGIN_LOCKOUT_MINUTES="15"

# ===========================================
# FRONTEND (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
