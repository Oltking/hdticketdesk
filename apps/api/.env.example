# apps/api/.env.example

# =====================
# DATABASE
# =====================
DATABASE_URL="postgresql://user:password@localhost:5432/hdticketdesk?schema=public"

# =====================
# APP CONFIG
# =====================
NODE_ENV="development"
PORT=4000
APP_URL="http://localhost:3000"
API_URL="http://localhost:4000"

# =====================
# JWT & SECURITY
# =====================
JWT_SECRET="your-super-secure-jwt-secret-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret"
JWT_REFRESH_EXPIRES_IN="30d"

# Bcrypt rounds (10-12 recommended)
BCRYPT_ROUNDS=10

# =====================
# OTP CONFIG
# =====================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# =====================
# PAYSTACK
# =====================
PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_WEBHOOK_SECRET="your-webhook-secret-from-paystack"

# Platform fee percentage (5% = 0.05)
PLATFORM_FEE_PERCENTAGE=0.05

# =====================
# EMAIL (SENDGRID)
# =====================
EMAIL_PROVIDER="sendgrid" # or "smtp"
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@hdticketdesk.com"
EMAIL_FROM_NAME="hdticketdesk"

# SMTP (if using SMTP instead of SendGrid)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =====================
# CLOUDINARY (MEDIA UPLOADS)
# =====================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_FOLDER="hdticketdesk"

# =====================
# REDIS (OPTIONAL - FOR CACHING/QUEUES)
# =====================
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED=false

# =====================
# CORS
# =====================
CORS_ORIGINS="http://localhost:3000,https://hdticketdesk.com"

# =====================
# RATE LIMITING
# =====================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =====================
# LOGGING & MONITORING
# =====================
LOG_LEVEL="debug" # error, warn, info, debug
SENTRY_DSN="" # Optional

# =====================
# WITHDRAWAL RULES
# =====================
WITHDRAWAL_COOLDOWN_HOURS=24
REFUND_WINDOW_HOURS=24