generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// USER & AUTH
// =====================

enum UserRole {
  BUYER
  ORGANIZER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(BUYER)
  firstName String?
  lastName  String?
  phone     String?
  
  // Security
  emailVerified      Boolean   @default(false)
  emailVerifiedAt    DateTime?
  passwordResetToken String?
  passwordResetExp   DateTime?
  
  // Organizer-specific
  organizerProfile OrganizerProfile?
  
  // Buyer-specific
  tickets Ticket[]
  refundRequests RefundRequest[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
}

model OrganizerProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @ref(fields: [userId], references: [id], onDelete: Cascade)
  
  // Bank details
  bankName          String?
  accountNumber     String?
  accountName       String?
  bankVerified      Boolean @default(false)
  bankVerifiedAt    DateTime?
  
  // Security
  otpSecret         String?
  lastOtpSentAt     DateTime?
  newDeviceVerified Boolean @default(false)
  
  // Balances
  pendingBalance    Decimal @default(0) @db.Decimal(12, 2)
  availableBalance  Decimal @default(0) @db.Decimal(12, 2)
  withdrawnBalance  Decimal @default(0) @db.Decimal(12, 2)
  
  // Relations
  events      Event[]
  withdrawals Withdrawal[]
  ledgerEntries LedgerEntry[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model OtpVerification {
  id        String   @id @default(cuid())
  userId    String
  code      String
  type      OtpType
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([userId, type, verified])
}

enum OtpType {
  EMAIL_VERIFICATION
  NEW_DEVICE_LOGIN
  PAYOUT_ACCOUNT_CHANGE
  WITHDRAWAL
}

// =====================
// EVENTS & TICKETS
// =====================

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
}

model Event {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  description String      @db.Text
  
  // Organizer
  organizerId String
  organizer   OrganizerProfile @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  
  // Event details
  status      EventStatus @default(DRAFT)
  startDate   DateTime
  endDate     DateTime?
  timezone    String      @default("Africa/Lagos")
  
  // Location
  isOnline    Boolean     @default(false)
  location    String?
  onlineLink  String?
  
  // Media
  coverImage  String?
  gallery     String[]    @default([])
  
  // SEO
  metaTitle       String?
  metaDescription String?
  
  // Relations
  tiers       TicketTier[]
  tickets     Ticket[]
  scans       TicketScan[]
  
  // Stats (denormalized for performance)
  totalTicketsSold Int @default(0)
  totalRevenue     Decimal @default(0) @db.Decimal(12, 2)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  publishedAt DateTime?
  
  @@index([slug])
  @@index([organizerId])
  @@index([status])
  @@index([startDate])
}

model TicketTier {
  id      String @id @default(cuid())
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  name     String
  price    Decimal @db.Decimal(10, 2)
  capacity Int
  sold     Int     @default(0)
  
  // Refund policy
  refundEnabled Boolean @default(false)
  
  // Tier order for display
  sortOrder Int @default(0)
  
  tickets Ticket[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventId])
}

// =====================
// TICKETS & ATTENDANCE
// =====================

enum TicketStatus {
  ACTIVE
  CHECKED_IN
  REFUNDED
  CHARGEBACK_PENDING
  CANCELLED
}

model Ticket {
  id       String       @id @default(cuid())
  ticketNumber String   @unique @default(cuid())
  qrCode   String       @unique
  
  // Relations
  eventId  String
  event    Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  tierId   String
  tier     TicketTier   @relation(fields: [tierId], references: [id], onDelete: Cascade)
  
  buyerId  String
  buyer    User         @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  
  // Payment
  paymentId       String  @unique
  amountPaid      Decimal @db.Decimal(10, 2)
  platformFee     Decimal @db.Decimal(10, 2)
  organizerAmount Decimal @db.Decimal(10, 2)
  
  // Status
  status TicketStatus @default(ACTIVE)
  
  // Attendance
  checkedInAt DateTime?
  scans       TicketScan[]
  
  // Refund/Chargeback
  refundRequest RefundRequest?
  chargebackAt  DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([eventId])
  @@index([buyerId])
  @@index([ticketNumber])
  @@index([status])
}

model TicketScan {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  scannedAt DateTime @default(now())
  scannedBy String   // Organizer user ID
  
  @@index([ticketId])
  @@index([eventId])
}

// =====================
// REFUNDS
// =====================

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

model RefundRequest {
  id       String       @id @default(cuid())
  ticketId String       @unique
  ticket   Ticket       @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  requesterId String
  requester   User    @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  
  reason String @db.Text
  status RefundStatus @default(PENDING)
  
  refundAmount Decimal @db.Decimal(10, 2)
  
  // Organizer action
  reviewedBy String?
  reviewedAt DateTime?
  reviewNote String?
  
  // Completion
  completedAt   DateTime?
  refundPaymentId String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([ticketId])
  @@index([requesterId])
  @@index([status])
}

// =====================
// WITHDRAWALS & LEDGER
// =====================

enum WithdrawalStatus {
  PENDING
  OTP_VERIFIED
  PROCESSING
  COMPLETED
  FAILED
}

model Withdrawal {
  id          String           @id @default(cuid())
  organizerId String
  organizer   OrganizerProfile @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  
  amount           Decimal          @db.Decimal(10, 2)
  status           WithdrawalStatus @default(PENDING)
  
  // Paystack
  paystackTransferId String?
  paystackReference  String?
  
  // OTP
  otpVerified   Boolean   @default(false)
  otpVerifiedAt DateTime?
  
  // Completion
  completedAt DateTime?
  failureReason String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([organizerId])
  @@index([status])
}

// =====================
// LEDGER (AUDIT TRAIL)
// =====================

enum LedgerEntryType {
  TICKET_SALE
  REFUND
  WITHDRAWAL
  CHARGEBACK
  PLATFORM_FEE
}

model LedgerEntry {
  id          String          @id @default(cuid())
  organizerId String
  organizer   OrganizerProfile @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  
  type   LedgerEntryType
  amount Decimal         @db.Decimal(12, 2)
  
  // Balances after this entry
  pendingBalanceAfter   Decimal @db.Decimal(12, 2)
  availableBalanceAfter Decimal @db.Decimal(12, 2)
  
  // References
  ticketId     String?
  refundId     String?
  withdrawalId String?
  
  description String @db.Text
  metadata    Json?
  
  createdAt DateTime @default(now())
  
  @@index([organizerId])
  @@index([type])
  @@index([createdAt])
}

// =====================
// PLATFORM ANALYTICS
// =====================

model PlatformBalance {
  id String @id @default(cuid())
  
  totalCollected Decimal @default(0) @db.Decimal(12, 2)
  totalFees      Decimal @default(0) @db.Decimal(12, 2)
  totalPayouts   Decimal @default(0) @db.Decimal(12, 2)
  
  updatedAt DateTime @updatedAt
}

// =====================
// MEDIA UPLOADS
// =====================

model MediaUpload {
  id        String   @id @default(cuid())
  userId    String
  filename  String
  url       String
  cdnUrl    String?
  mimeType  String
  sizeBytes Int
  altText   String?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
}